<html>
  <head>
    <body>
      <h3> Star pattern  </h3>
      <script type="text/javascript">

        var i, j;
        for(i=1; i <= 5; i++)
          {
          for(j=1; j<=i; j++)
            {
            document.write('*');
            }
          document.write('<br/>');
          }

      </script>
    </body>
  </head>
</html>


<html>
  <head>
    <body>
      <h3> Inverted Star pattern  </h3>
      <script type="text/javascript">

        var i, j;
      for(i=5;i>=1;i--)
        {
        for(j=1;j<=i;j++)
          {
          document.write('*');
          }
        document.write('<br/>');
        }

      </script>
    </body>
  </head>
</html>
